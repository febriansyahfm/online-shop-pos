<%- include('../v_layout/head') %>


<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <link href="/css-tambahan/login.css" rel="stylesheet">
    
    <main class="form-signin w-100 m-auto">
    <form method="post" action="/auth/proses-login">
        <img class="center" src="/image/login.png" alt="" >
        <br>
        <% if (typeof notifikasi !== 'undefined') {%>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= notifikasi %>
            </div>
            
        <% } %>
        
        <br>
        <div class="form-floating">
        <input type="email" class="form-control" name="form_email" placeholder="Email">
        <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
        <input type="password" class="form-control" Name="form_password" placeholder="Password">
        <label for="floatingPassword">Password</label>
        </div>

        <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
            Remember me
        </label>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        
        <p class="mt-5 mb-3 text-body-secondary">&copy; 2024</p>
    </form>
    </main>
    <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
